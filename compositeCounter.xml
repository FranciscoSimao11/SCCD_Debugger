<?xml version="1.0" ?>
<diagram author="Francisco Simoes" name="Composite Counter">
    <inport name="input" />
    <outport name="output" />
    <class name="MainApp" default="true">
        <method name="MainApp">
            <body>
                <![CDATA[
                self.counter = 0
                ]]>
            </body>
        </method>
        <method name="increment_counter">
            <body>
                self.counter = self.counter + 1
                print "counter: ", self.counter
            </body>
        </method>
        <scxml initial="state_A">
            <state initial="state_A2" id="state_A">
                <state id="state_A2">
                    <onentry>
                        <script>
                            self.increment_counter();
                        </script>
                    </onentry>
                    <transition target="../state_B2" after="5" />
                </state>
                <state id="state_B2">
                    <onentry>
                        <script>
                            self.increment_counter();
                        </script>
                    </onentry>
                    <transition target="../state_A2" event="move" port="input" />
                </state>
            </state>
            <state id="state_B">
                <onentry>
                    <script>
                        self.increment_counter();
                    </script>
                </onentry>
                <transition target="../state_A" event="move" port="input" />
            </state>
        </scxml>
    </class>
</diagram>